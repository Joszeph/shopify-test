<div>
    <h2>{{product.title}}</h2>
    {{product| image_url: width:250 | image_tag}}
    <p>{{product.description}}</p>
    <p>{{product.price | money }}</p>
</div>

{% form 'product', product %}
    <select name="id">
        {% for variant in product.variants %}
            <option value={{variant.id}}>
                {{variant.title}}
            </option>
        {% endfor %}
    </select>
{% endform %}

<button type="submit">Add to cart</button>